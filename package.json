{
  "name": "typewriter-editor",
  "version": "0.6.37",
  "description": "A rich text editor using the Delta format with decorations and rendered with a tiny virtual dom",
  "keywords": [
    "typewriter",
    "rich text editor",
    "wysiwyg",
    "svelte",
    "delta"
  ],
  "scripts": {
    "build": "tsc && webpack && cp src/*.svelte lib/",
    "start": "webpack serve --config webpack.dev.config.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "TS_NODE_PROJECT=test/tsconfig.json mocha",
    "tdd": "TS_NODE_PROJECT=test/tsconfig.json mocha -w --reporter progress"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "src": "src",
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/typewriter-editor/typewriter.git"
  },
  "dependencies": {
    "@popperjs/core": "^2.6.0",
    "fast-diff": "^1.2.0"
  },
  "peerDependencies": {
    "svelte": "3.x"
  },
  "devDependencies": {
    "@pyoner/svelte-types": "^3.4.4-2",
    "@types/chai": "^4.2.14",
    "@types/fast-diff": "^1.2.0",
    "@types/mocha": "^8.2.0",
    "chai": "^4.2.0",
    "chai-exclude": "^2.0.2",
    "jsdom": "^16.4.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^8.2.1",
    "raw-loader": "^4.0.2",
    "svelte": "^3.31.2",
    "svelte-loader": "^2.13.6",
    "svelte-routing": "^1.5.0",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3",
    "webpack": "^5.11.1",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  }
}
