{
  "name": "typewriter-editor",
  "version": "0.7.15",
  "description": "A rich text editor using the Delta format with decorations and rendered with a tiny virtual dom",
  "keywords": [
    "typewriter",
    "rich text editor",
    "wysiwyg",
    "svelte",
    "delta"
  ],
  "scripts": {
    "build": "tsc && webpack && cp src/*.svelte lib/",
    "start": "webpack serve --config webpack.dev.config.js",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "tdd": "jest --watch"
  },
  "license": "MIT",
  "main": "lib/index.js",
  "type": "module",
  "directories": {
    "lib": "lib",
    "src": "src",
    "doc": "docs",
    "example": "examples",
    "test": "test"
  },
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/typewriter-editor/typewriter.git"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.6",
    "@typewriter/document": "^0.7.4"
  },
  "peerDependencies": {
    "svelte": "3.x"
  },
  "devDependencies": {
    "@pyoner/svelte-types": "^3.4.4-2",
    "@types/fast-diff": "^1.2.0",
    "@types/jest": "^29.2.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jsdom": "^20.0.2",
    "jsdom-global": "^3.0.2",
    "raw-loader": "^4.0.2",
    "svelte": "^3.52.0",
    "svelte-loader": "^3.1.3",
    "svelte-routing": "^1.6.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  }
}
