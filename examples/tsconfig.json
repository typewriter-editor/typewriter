{
  "compilerOptions": {
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "target": "es6",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "baseUrl": "../src",
    "paths": {
      "typewriter-editor": [ "index.ts" ],
      "typewriter-editor/lib/*": [ "./*" ]
    },
  },
  "include": [
    "."
  ]
}